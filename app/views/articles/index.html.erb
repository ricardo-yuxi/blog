<div class="col-sm-12">
  <div class="container">
    <div class="page-header">
      <h1><%= t('list_articles') %></h1>
    </div>

  
    

      <div class="section">
        <div class="row">
          <div class="col-sm-8">
      <% @articles.each do |article| %>
            <article>
              <h3>
                <%= article.title %>
              </h3>
              
              <p class="text-right">
              <%= l article.created_at, format: "%d %B %Y" %>
              </p>
                
              <p>
                <%= article.text %>
              </p>

              <%= link_to t('show'), article_path(article) %>
              <%= link_to t('edit'), edit_article_path(article) %>
              <%= link_to t('delete'), article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>

            </article>
            <% end %> 
          </div>
          
          <aside>
            <div class="col-sm-4">
              <div class="list-group">
                <a class="list-group-item active">
                  <%= t('latest_articles')%>
                </a>
                <% @articles.limit(5).each do |article| %>
                
                <%= link_to article.title, article_path(article), class: "list-group-item" %>
                
                <% end %>
              </div>
            </div>
          </aside> 

        </div>

       

      </div>

          
      
          
       


  </div>
</div>
