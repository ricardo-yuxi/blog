<div class="col-sm-12">
  <div class="container">
    <div class="page-header">
      <h1><%= t('list_articles') %></h1>
    </div>
    <p>
      <%= link_to 'New article', new_article_path, remote: true, class: "btn btn-success", id: "new" %>
    </p>
    <div class="row">
      <div class="col-sm-4 form">
      </div>
    </div>

      <div class="section">
        <div class="row">
          <div class="col-sm-8 list-article">
            <div class="new-article">
              
            
            <% @articles.each do |article| %>
            <article class="article">
                <h3 class="margin-title">
                  <%= link_to article.title, article_path(article) %>
                </h3>
                
                <p class="text-info">
                <%= l article.created_at, format: "%d %B %Y" %>
                </p>
                
              <p class="text-uppercase">
                <%= article.text %>
              </p>

              <p class="text-info">
                <%= pluralize(article.comments.count, 'comentario') %> 
              </p>

            </article>
      <% end %>
      </div> 
          </div>
          
          <aside>
            <div class="col-sm-4">
              <div class="list-group">
                <a class="list-group-item active">
                  <%= t('latest_articles')%>
                </a>
                <% @articles.order(created_at: :desc).limit(5).each do |article| %>
                <span class="list-group-item">
                  <%= link_to article.title, article_path(article)  %>
                  <%= l article.created_at, format: "%d %B %Y" %>
                </span>
                <% end %>
              </div>
            </div>
          </aside> 

        </div>

      </div>

  </div>
</div>
